        <td>User</td>
        <td>Done At</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @task_records.each do |task_record| %>
        <tr>
          <td>
            <%= task_record.task.name %>
          </td>
          <td>
            <%= task_record.user.name %>
          </td>
          <td>
            <%= task_record.done_at.strftime("%d.%m.%Y") %>
          </td>
          <td>
            <%= button_to "â€¦", task_record, method: :get %>
          </td>
