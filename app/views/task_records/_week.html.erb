<% date_today = Date.today%>
<div class="top-container">
  <a href="<%= instructions_path %>" data-turbo="false">
    <svg style="width:3rem;height:3rem" viewBox="0 0 24 24">
        <path fill="var(--red)" d="M15.07,11.25L14.17,12.17C13.45,12.89 13,13.5 13,15H11V14.5C11,13.39 11.45,12.39 12.17,11.67L13.41,10.41C13.78,10.05 14,9.55 14,9C14,7.89 13.1,7 12,7A2,2 0 0,0 10,9H8A4,4 0 0,1 12,5A4,4 0 0,1 16,9C16,9.88 15.64,10.67 15.07,11.25M13,19H11V17H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2Z" />
    </svg>
  </a>
  <span class="full-date" data-controller="time">
    <%= link_to date_today.strftime('%e. of %b %Y') %>
  </span>
</div>
<div class="week" id="week">
  <% 5.times do |n|%>
    <% date = date_today.beginning_of_week + n.days %>
    <a href="<%= new_task_record_url %>?date=<%= date %>" data-action="click->hello#setActive">
      <button class="wday <%= selected_date == date.to_s ? "active" : "" %>" type="button"><span class="wday-name"><%= date.strftime("%a") %></span> <span class="date"><%= date.strftime('%d/%m') %></span></button>
    </a>
  <% end %>
</div>