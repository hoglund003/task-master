<div class="badge">
  <% last_month = Date::MONTHNAMES[Date.today.prev_month.mon] %>
  <h4>Best in <%= last_month %>:</h4>
  <a href="<%= user_path(user) %>">
    <div class="small-avatar">
      <%= image_tag user.avatar_url %>
      <h2><%= user.name %></h2>
      <h2><%= user.points_last_month %>p</h2>
    </div>
  </a>
</div>