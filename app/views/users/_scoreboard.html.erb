<turbo-frame id="turbo-scoreboard">
  <div class="container">
    <% today = Date.today %>
    <% this_month = Date.new(today.year, today.month) %>
    <% last_month = Date.new(today.year, today.prev_month.month)%>
    <% next_month = Date.new(today.year, today.next_month.month) %>
    <div class="button-container">
      <a href="/users">
        <button class="sort-button <%= params[:start_date] == nil ? "active" : "" %>">Ever</button>
      </a>
      <a href="/users?start_date=<%= last_month %>&end_date=<%= this_month %>">
        <button class="sort-button <%= params[:end_date] == this_month.to_s ? "active" : "" %>">Last month (<%= Date::MONTHNAMES[last_month.month] %>)</button>
      </a>
      <a href="/users?start_date=<%= this_month %>&end_date=<%= next_month %>">
        <button class="sort-button <%= params[:start_date] == this_month.to_s ? "active" : "" %>">This month (<%= Date::MONTHNAMES[this_month.month] %>)</button>
      </a>
    </div>
    <% if @users.any? %>
      <table>
        <thead>
          <tr>
            <td></td>
            <td class="username-td">Name</td>
            <td>Points</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% users.each do |user| %>
            <tr>
              <td>
                <div class="small-avatar">
                  <%= image_tag user.avatar_url %>
                </div>
              </td>
              <td class="username-coll"><%= user.name %></td>
              <td><%= user.points_at(params[:start_date], params[:end_date]) %></td>
              <td><%= button_to "â€¦", user, method: :get %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h2>There are only users here XD</h2>
    <% end %>
  </div>
</turbo-frame>